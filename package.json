{
  "name": "ledger",
  "version": "0.2.0",
  "description": "WebRTC + SQL + CRDT replication library (powered by cr-sqlite)",
  "type": "module",
  "main": "dist/ledger.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --outfile=dist/ledger.js --format=esm --external:@vlcn.io/crsqlite-wasm",
    "build:demo": "esbuild src/index.ts --bundle --outfile=demo/ledger.js --format=esm --platform=browser --external:@vlcn.io/crsqlite-wasm",
    "dev": "esbuild src/index.ts --bundle --outfile=demo/ledger.js --format=esm --platform=browser --external:@vlcn.io/crsqlite-wasm --watch --servedir=demo",
    "server": "node server/signaling.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@vlcn.io/crsqlite-wasm": "^0.16.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.0"
  }
}
